{
    "manifest_version": 2,
    "name": "Random Theme Switcher",
    "version": "1.1",
    "description": "Switches to a random theme from the user's installed themes.",
    "permissions": [
      "theme",
      "management"
    ],
    "browser_action": {
      "default_icon": {
        "48": "icons/icon-48.png"
      },
      "default_title": "Random Theme Switcher"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "icons": {
      "48": "icons/icon-48.png"
    }
  }
  